  <script>
    function showSection(id) {
      document.querySelectorAll('.section').forEach(section => {
        section.classList.remove('active');
      });
      document.getElementById(id).classList.add('active');
    }

    const slides = [
      "–í —Ç–∏—à–∏–Ω–µ –Ω–∞—à–∏—Ö —Å–µ—Ä–¥–µ—Ü –∏–≥—Ä–∞–µ—Ç –Ω–µ–∂–Ω–∞—è –º–µ–ª–æ–¥–∏—è.",
      "–¢—ã ‚Äî –∫–∞–∫ —Å–æ–ª–Ω—Ü–µ —Å —É—Ç—Ä–∞, —Å–æ–≥—Ä–µ–≤–∞–µ—à—å –º–µ–Ω—è —Å–≤–æ–∏–º —Å–≤–µ—Ç–æ–º.",
      "–¢–≤–æ–∏ —Å–ª–æ–≤–∞ –¥–ª—è –º–µ–Ω—è ‚Äî —Å–∞–º—ã–π –ª—É—á—à–∏–π –∫–æ–º–ø–ª–∏–º–µ–Ω—Ç.",
      "–ö–æ–≥–¥–∞ —è –¥—É–º–∞—é –æ —Ç–µ–±–µ, –º–∏—Ä —Å—Ç–∞–Ω–æ–≤–∏—Ç—Å—è —è—Ä—á–µ.",
      "–ö–∞–∂–¥—ã–π –º–∏–≥ —Å —Ç–æ–±–æ–π ‚Äî —ç—Ç–æ –ø–æ–¥–∞—Ä–æ–∫, –∫–æ—Ç–æ—Ä—ã–π —è —Ö—Ä–∞–Ω—é.",
      "–¢—ã ‚Äî –≤–¥–æ—Ö–Ω–æ–≤–µ–Ω–∏–µ –¥–ª—è –º–æ–∏—Ö —Å–∞–º—ã—Ö –ø—Ä–µ–∫—Ä–∞—Å–Ω—ã—Ö –º–µ—á—Ç–∞–Ω–∏–π."
    ];

    const videoIds = [
      "WFBDaxewTY0",
      "odinQDui0CY",
      "5sd7gJTnFRM",
      "xJrA4MfsZjQ",
      "wEhqCE0aEnE",
      "Nhz_8fWhDT0"
    ];

    const correctPassword = 'love';

    let player;
    let currentSlide = 0;
    let sliderStarted = false;

    function checkPassword() {
      const input = document.getElementById('passwordInput').value.trim().toLowerCase();
      if (input === correctPassword) {
        document.getElementById('passwordPrompt').style.display = 'none';
        document.getElementById('sliderArea').classList.remove('hidden');
        sliderStarted = true;
        currentSlide = 0;
        if (typeof YT === 'undefined' || typeof YT.Player === 'undefined') {
          // YouTube API –µ—â—ë –Ω–µ –∑–∞–≥—Ä—É–∂–µ–Ω, —Å–æ–∑–¥–∞–¥–∏–º –ø–ª–µ–µ—Ä –ø—Ä–∏ –∑–∞–≥—Ä—É–∑–∫–µ API
        } else {
          createPlayer();
        }
      } else {
        document.getElementById('errorMessage').innerText = '–ù–µ–ø—Ä–∞–≤–∏–ª—å–Ω—ã–π –ø–∞—Ä–æ–ª—å üíî';
      }
    }

    function createPlayer() {
      if (player) {
        player.destroy();
        player = null;
      }
      player = new YT.Player('player', {
        height: '0',
        width: '0',
        videoId: videoIds[currentSlide],
        playerVars: {
          autoplay: 1,
          controls: 0,
          disablekb: 1,
          modestbranding: 1,
          rel: 0,
          showinfo: 0,
          iv_load_policy: 3
        },
        events: {
          onReady: onPlayerReady,
          onStateChange: onPlayerStateChange
        }
      });
    }

    function onPlayerReady(event) {
      event.target.playVideo();
      updateSlideText();
    }

    function onPlayerStateChange(event) {
      if (event.data === YT.PlayerState.ENDED) {
        nextSlide();
      }
    }

    function updateSlideText() {
      document.getElementById('sliderContent').textContent = slides[currentSlide];
    }

    function nextSlide() {
      if (!sliderStarted) return;
      currentSlide++;
      if (currentSlide >= slides.length) currentSlide = 0;
      if (player) player.loadVideoById(videoIds[currentSlide]);
      updateSlideText();
    }

    function prevSlide() {
      if (!sliderStarted) return;
      currentSlide--;
      if (currentSlide < 0) currentSlide = slides.length - 1;
      if (player) player.loadVideoById(videoIds[currentSlide]);
      updateSlideText();
    }

    function onYouTubeIframeAPIReady() {
      if (sliderStarted && !player) {
        createPlayer();
      }
    }

    // –ó–∞–≥—Ä—É–∑–∫–∞ YouTube IFrame API
    let tag = document.createElement('script');
    tag.src = "https://www.youtube.com/iframe_api";
    let firstScriptTag = document.getElementsByTagName('script')[0];
    firstScriptTag.parentNode.insertBefore(tag, firstScriptTag);

    // –≠—Ñ—Ñ–µ–∫—Ç: —Å–æ–∑–¥–∞—ë–º —Å–µ—Ä–¥–µ—á–∫–∏ –ø–æ –¥–≤–∏–∂–µ–Ω–∏—é –º—ã—à–∏ –≤ –±–ª–æ–∫–µ #home
    const heartContainer = document.getElementById('heartContainer');

    function createHeart(x, y) {
      const heart = document.createElement('div');
      heart.textContent = 'üíñ';
      heart.style.position = 'absolute';
      heart.style.left = x + 'px';
      heart.style.top = y + 'px';
      heart.style.fontSize = '24px';
      heart.style.opacity = 1;
      heart.style.pointerEvents = 'none';
      heart.style.userSelect = 'none';
      heart.style.transition = 'transform 1s ease-out, opacity 1s ease-out';
      heartContainer.appendChild(heart);

      // –ó–∞–ø—É—Å–∫–∞–µ–º –∞–Ω–∏–º–∞—Ü–∏—é ‚Äî —Å–µ—Ä–¥—Ü–µ –ø–æ–¥–Ω–∏–º–∞–µ—Ç—Å—è –∏ –∏—Å—á–µ–∑–∞–µ—Ç
      setTimeout(() => {
        heart.style.transform = 'translateY(-50px) scale(1.5)';
        heart.style.opacity = 0;
      }, 10);

      // –£–¥–∞–ª—è–µ–º —ç–ª–µ–º–µ–Ω—Ç –ø–æ—Å–ª–µ –∞–Ω–∏–º–∞—Ü–∏–∏
      setTimeout(() => {
        heart.remove();
      }, 1000);
    }

    // –î–æ–±–∞–≤–ª—è–µ–º —Å–ª—É—à–∞—Ç–µ–ª—å –¥–≤–∏–∂–µ–Ω–∏—è –º—ã—à–∏ –Ω–∞ #home
    const homeSection = document.getElementById('home');
    homeSection.addEventListener('mousemove', (e) => {
      // –ö–æ–æ—Ä–¥–∏–Ω–∞—Ç—ã –æ—Ç–Ω–æ—Å–∏—Ç–µ–ª—å–Ω–æ –∫–æ–Ω—Ç–µ–π–Ω–µ—Ä–∞ heartContainer
      const rect = heartContainer.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;
      createHeart(x, y);
    });
  </script>

</body>
